<h1> User <%= @user.name%> </h1> 
<h2> <%= link_to 'Back', posts_path%>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th>Created at</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %> <%#посты этого автора%>
            <tr>
                <td><%= post.id%></td>
                <td><%= post.title%></td>
                <td><%= post.body%></td> 
                <td><%= post.author%></td>
                <td><%= post.created_at%></td>
            </tr>
        <%end%>
    </tbody>
<table>